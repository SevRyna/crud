{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main class="main">
  
{{#with data}}
<form method="POST" action="/purchase-create?id={{id}}" class="form-card">
{{>heading title="Інформація про замовлення"}}

<ul class="cart">
    {{#each cart}}
    <li class="cart_item">
        <span>{{text}}</span>
        <span>{{price}} грн</span>
    </li>
    {{/each}}
</ul>
{{>divider}}

{{>field text ="ID" value="id"}} 
{{>field text ="Number" value="number"}}
{{>field text ="Ім'я" value="firstname"}} 
{{>field text ="Прізвище" value ="lastname"}}
{{>field text ="Телефон" value ="phone"}}
{{>field text ="Пошта" value ="email"}}
{{>field text ="Коментар" value ="comment"}}
{{>field text ="Списати бонуси" value ="bonus"}}
{{>field text ="Промо-код" value ="promocode"}}

{{>button text="Змінити дані"}}

{{>divider}}

{{>heading title="Зміна данних"}}
{{>field text ="ID" value="id"}} 
{{>field text ="Number" value="number"}}
{{>field text ="Ім'я" value="firstname"}} 
{{>field text ="Прізвище" value ="lastname"}}
{{>field text ="Телефон" value ="phone"}}
{{>field text ="Пошта" value ="email"}}

{{>button text ="Зберегти зміни"}}

</form>
{{/with}}

</main>

